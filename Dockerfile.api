# ABOUTME: FastAPI backend image; uvicorn on port 8000.
# ABOUTME: Set GEMINI_API_KEY and optionally GOALS_DB_PATH for SQLite.

FROM python:3.12-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    fastapi uvicorn sqlmodel pydantic google-adk google-genai python-dotenv

COPY core/ ./core/
COPY goal_coach/ ./goal_coach/
COPY api/ ./api/

ENV PYTHONPATH=/app

EXPOSE 8000
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
